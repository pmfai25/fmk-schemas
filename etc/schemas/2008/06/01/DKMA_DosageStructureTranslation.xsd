<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:medicinecard="http://www.dkma.dk/medicinecard/xml.schema/2008/06/01" targetNamespace="http://www.dkma.dk/medicinecard/xml.schema/2008/06/01" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<include schemaLocation="DKMA_DosageStructureTranslationShortText.xsd"/>
	<include schemaLocation="DKMA_DosageStructureTranslationLongText.xsd"/>
	<include schemaLocation="DKMA_DosageQuantityValue.xsd"/>
	<include schemaLocation="DKMA_DosageQuantityUnitText.xsd"/>
	<element name="DosageStructureTranslation" type="medicinecard:DosageStructureTranslationType">
		<annotation>
			<documentation xml:lang="en-GB">Dosage structure translated to text plus a calulated average daily dosage</documentation>
			<documentation xml:lang="da-DK">Dosisstrukturen oversat til tekst samt beregnet gennemsnitlig daglig dosis</documentation>
		</annotation>
	</element>
	<complexType name="DosageStructureTranslationType">
		<sequence>
			<element ref="medicinecard:DosageStructureTranslationShortText" minOccurs="0"/>
			<element ref="medicinecard:DosageStructureTranslationLongText"/>
			<sequence minOccurs="0">
				<choice>
					<element name="DosageStructureTranslationAverageDailyDosageValue" type="medicinecard:DosageQuantityValueType"/>
					<sequence>
						<element name="DosageStructureTranslationAverageDailyDosageMinValue" type="medicinecard:DosageQuantityValueType"/>
						<element name="DosageStructureTranslationAverageDailyDosageMaxValue" type="medicinecard:DosageQuantityValueType"/>
					</sequence>
				</choice>
				<element name="DosageStructureTranslationAverageDailyDosageUnitText" type="medicinecard:DosageQuantityUnitTextType"/>				
			</sequence>
		</sequence>
	</complexType>
</schema>
